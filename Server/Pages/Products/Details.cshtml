@page "/product/{productId}"
@model Profile.Server.Pages.Products.DetailsModel
@{
    ViewData["Title"] = "Details";
}


<head>
    <meta property="og:url"          content="https://prfl.ga/product/@Model.Product.ProductId" />
    <meta property="og:type"         content="product" />
    <meta property="og:title"        content="@Model.Product.Name" />
    <meta property="og:description"  content="@Model.Product.Description" />
    <meta property="og:image"        content="@Model.Product.ImageUrl" />
</head>

  <div class="card border-0 mt-2">
      <div class="col">
        <div class="card border-0 shadow rounded" style="max-width: 540px;">
          <div class="row g-0 mb-2 pt-1">
            <div class="col-6 bg-light border-end border-1 rounded text-center">
              <img src="@Model.Product.ImageUrl" alt="@Model.Product.Name" width="100%" height="100%">
            </div>
            <div class="col-6">
              <div class="card-body pt-1">
                <div class="row mb-2">
                  <div class="col text-end"><span class="badge bg-light text-dark">@Model.Product.Category</span></div>
                </div>
                <div class="row">
                  <div class="col"><h5 class="card-title">@Model.Product.Name</h5></div>
                </div>
                <div class="row">
                  <div class="col"><p class="card-text">@Model.Product.Description</p></div>
                </div>
              </div>
            </div>
          </div>
          <div class="card-footer bg-white">
            <div class="row g-0">
              <div class="col text-end"><p class="card-text"><h6><span class="badge bg-primary">@Model.Product.Price</span></h6></p></div>
            </div>
          </div>
        </div>
    </div>