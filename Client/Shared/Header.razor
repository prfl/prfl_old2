@inject Services.StateContainer StateContainer

<div class="sidebar pt-1 mt-2 shadow rounded bg-white">
  <div class="container rounded pb-2 bg-white">
    <div class="mt-3 text-center">
        <img src="@ImageUrl" class="rounded-circle" width="96px" height="96px"/>
    </div>
        <div class="mt-1 text-center">
            <div class="text-strong"><strong>@@<span>@Username</span></strong></div>
        </div>
  </div>
</div>

@code {
    [Parameter] public string Username { get; set; }
    [Parameter] public string ImageUrl { get; set; }
}