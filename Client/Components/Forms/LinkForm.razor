@using Profile.Shared.Models


<EditForm Model="@Link" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />

    <div class="row">
        <div class="col"> 
            <div class="form-group mb-3">
                <label class="control-label">Name</label>
                <InputText class="form-control" @bind-Value="@Link.Name" />
                <ValidationMessage For="@(() => Link.Name)" />
            </div>
            <div class="form-group mb-3">
                <label class="control-label">Description</label>
                <InputTextArea class="form-control" @bind-Value="@Link.Description" />
                <ValidationMessage For="@(() => Link.Description)" />
            </div>
            <div class="form-group mb-3">
                <label class="control-label">Link URL</label>
                <InputText class="form-control" @bind-Value="@Link.Url" placeholder="https://example.com/link/123"/>
                <ValidationMessage For="@(() => Link.Url)" />
            </div>
            <div class="form-check form-switch mb-3">
                <InputCheckbox class="form-check-input" type="checkbox" id="flexCheckDefault" @bind-Value="@Link.IsFavorite" />
                <label class="form-check-label" for="flexCheckDefault">Add to favorites</label>
                <ValidationMessage For="@(() => Link.IsFavorite)" />
            </div>
        </div>
    </div>
    
    <button type="submit" class="btn btn-success">
        @ButtonText
    </button>

</EditForm>



@code {
    [Parameter] public Link Link { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Create";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}
