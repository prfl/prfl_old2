@using Profile.Shared.Models
@using Profile.Shared.Models.Admin


<EditForm Model="@Video" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />

    <div class="row">
        <div class="col"> 
            <div class="form-group mb-3">
                <label class="control-label">Name</label>
                <InputText class="form-control" @bind-Value="@Video.Name" />
                <ValidationMessage For="@(() => Video.Name)" />
            </div>
            <div class="form-group mb-3">
                <label class="control-label">Description</label>
                <InputTextArea class="form-control" @bind-Value="@Video.Description" />
                <ValidationMessage For="@(() => Video.Description)" />
            </div>
            <div class="form-group mb-3">
                <label class="control-label">Video URL</label>
                <InputText class="form-control" @bind-Value="@Video.Url" placeholder="https://youtube.com/1s24nksd"/>
                <ValidationMessage For="@(() => Video.Url)" />
            </div>
            <div class="form-check form-switch mb-3">
                <InputCheckbox class="form-check-input" type="checkbox" id="flexCheckDefault" @bind-Value="@Video.IsFavorite" />
                <label class="form-check-label" for="flexCheckDefault">Add to favorites</label>
                <ValidationMessage For="@(() => Video.IsFavorite)" />
            </div>
        </div>
    </div>
    
    <button type="submit" class="btn btn-success">
        @ButtonText
    </button>

</EditForm>



@code {
    [Parameter] public Video Video { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Create";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}
