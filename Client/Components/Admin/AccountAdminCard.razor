

  <div class="my-3 p-3 rounded shadow" style="background-color: @BackgroundColor;">
    <div class="row">

      <div class="col-2">
        <a href="@ApplicationLink"><img src="@LogoLink"  height="26px" width="26px"></a>
      </div>

      <div class="col-8">
          <a href="@UserLink"><strong class="d-block text-gray-dark" style="color: @TextColor;">@Username</strong></a>
      </div>

    
    <div class="col-1">
          @if(IsFavorite == true) {
          <img class="float-right" src="/assets/icons/star-fill.svg" height="20px" width="20px"/>
        }
      </div>

      <div class="col-1">
        <div class="dropdown">
          <a class="float-right" data-bs-toggle="dropdown" href="#"  aria-expanded="false" id="dropdownMenuLink">
              <img src="/assets/icons/menu.svg" height="20px" width="20px">
          </a>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
            <li><a class="dropdown-item" href="@EditLink">Edit</a></li>
            <li><a class="dropdown-item" @onclick="Remove">Delete</a></li>
          </ul>
        </div>
      </div>

    </div>
  </div>




  @code {
      [Parameter] public string BackgroundColor { get; set; } //account.Application.BackgroundColor
      [Parameter] public string ApplicationLink { get; set; } //account.Application.ApplicationLink
      [Parameter] public string LogoLink { get; set; } //account.Application.LogoLink
      [Parameter] public string TextColor { get; set; } //account.Application.TextColor
      [Parameter] public string Username { get; set; } //account.Username
      [Parameter] public string UserLink { get; set; } //var userLink = account.Application.ApplicationUserLink + account.Username;
      [Parameter] public bool IsFavorite { get; set; }
      [Parameter] public string EditLink { get; set; }
      [Parameter] public EventCallback Remove { get; set; }
  }