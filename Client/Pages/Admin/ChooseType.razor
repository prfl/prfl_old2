        <a href="admin/video/create" class="btn btn-outline-dark mb-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-play-btn-fill" viewBox="0 0 16 16">
                <path d="M0 12V4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm6.79-6.907A.5.5 0 0 0 6 5.5v5a.5.5 0 0 0 .79.407l3.5-2.5a.5.5 0 0 0 0-.814l-3.5-2.5z"></path>
            </svg>
            Video
        </a>
        <a href="admin/schedule/create" class="btn btn-outline-dark mb-2">
            <i class="bi bi-calendar2"></i>
            Schedule
        </a>
        <a href="admin/recipe/create" class="btn btn-outline-dark mb-2">
            <i class="bi bi-egg"></i>
            Recipe
        </a>

        <a href="admin/product/create" class="btn btn-outline-dark mb-2">
            <i class="bi bi-egg"></i>
            product
        </a>





    </div>
</div>



@code {
    [Parameter] public string username { get; set; }
    private string linkUrl => !String.IsNullOrEmpty(username) ? $"{username}/link/create" : "";
    private string accountUrl => !String.IsNullOrEmpty(username) ? $"{username}/account/create" : "";
    private string projectUrl => !String.IsNullOrEmpty(username) ? $"{username}/project/create" : "";
    private string videoUrl => !String.IsNullOrEmpty(username) ? $"{username}/video/create" : "";
}